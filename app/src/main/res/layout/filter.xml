<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layer Options"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp"/>

    <CheckBox
        android:id="@+id/checkBoxTornado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Tornadoes"
        android:checked="false"/>

    <CheckBox
        android:id="@+id/checkBoxWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Weather Reports"
        android:checked="false"/>

    <CheckBox
        android:id="@+id/checkBoxCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Country Lines"
        android:checked="false"/>

    <!-- Add more checkboxes for other filters -->

</LinearLayout>
